@model MeusMedicamentos.Application.DTOs.CriarCategoriaDTO

@{
    ViewBag.Title = "Criar Categoria";
}

<h2>Criar Categoria</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Nome, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Criar" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</div>
}
