@model IEnumerable<MeusMedicamentos.Application.DTOs.CategoriaDTO>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Criar Nova Categoria</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>@categoria.Status</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = categoria.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = categoria.Id })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
